<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/rumbler?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="model/Users.hbm.xml"/>
    <mapping resource="model/Followers.hbm.xml"/>
    <mapping resource="model/Settings.hbm.xml"/>
    <mapping resource="model/Notifications.hbm.xml"/>
    <mapping resource="model/Likes.hbm.xml"/>
    <mapping resource="model/Posts.hbm.xml"/>
    <mapping resource="model/Comments.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
